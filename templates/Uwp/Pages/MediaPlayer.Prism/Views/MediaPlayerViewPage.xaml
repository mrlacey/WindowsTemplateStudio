<Page
    x:Class="Param_RootNamespace.Views.MediaPlayerViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Param_RootNamespace.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
        <MediaPlayerElement
            x:Name="mpe"
            AreTransportControlsEnabled="True"
            AutoPlay="False"
            PosterSource="{x:Bind ViewModel.PosterSource, Mode=OneWay}"
            Source="{x:Bind ViewModel.Source, Mode=OneWay}">
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls IsCompact="False" />
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
        </ScrollViewer>
    </Grid>
</Page>
